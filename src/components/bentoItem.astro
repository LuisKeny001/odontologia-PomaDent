---
interface Props {
  title: string;
  class?: string;
}

const { title } = Astro.props;
---

<article
  class={`
    ${Astro.props.class}
    relative rounded-xl
    backdrop-blur-md
    border border-sky-800/10
    shadow-inner shadow-black/10
    overflow-hidden
`}
>
  <slot name="image" />
  <div
    class="absolute z-10 w-full h-full bg-gradient-to-b from-transparent from-40% via-sky-700/50 to-sky-900"
  >
  </div>
  <div
    class="relative select-none flex flex-col gap-1 p-3 text-lg z-20 justify-end h-full"
  >
    <h1 class="text-2xl text-sky-200 font-semibold text-balance">{title}</h1>
    <slot name="content" />
  </div>
</article>
